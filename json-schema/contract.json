{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "contract.json",

  "type": "object",
  "properties": {
    "$id": { "type": "string" },
    "$schema": { "const": "https://json-schema.org/draft-07/schema#" },
    "x-group": {
      "type": "array",
      "items": { "type": "string" }
    },
    "x-meta": {
      "type": "object",
      "properties": {
        "status_code": { "type": "integer", "minimum": 100 }
      },
      "additionalProperties": true
    },
    "properties": {
      "type": "object",
      "properties": {
        "headers": { "type": "object" },
        "input": { "type": "object" },
        "output": { "type": "object" }
      },
      "required": ["input", "output"]
    },
    "required": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "$id",
    "$schema",
    "properties",
    "required"
  ],
  "additionalProperties": true
}